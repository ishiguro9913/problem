<div class="col-sm-12 col-lg-4 mb-3">
  <div id="post-id-<%= post.id %>">
    <div class="card">
      <div class="card-body">
        <h4 class="card-title">
            <%= post.title %>
        </h4>
        <h4 class="card-body">
            <%= post.body %>
        </h4>
        <ul class="list-inline">
          <li class="list-inline-item">
            <%= icon 'far', 'user' %>
          </li>
          <li class="list-inline-item">
            <%= icon 'far', 'calendar' %>
            <%= l post.created_at, format: :long %>
          </li>
        </ul>
        <p class="card-text"><%= post.body %></p>
      </div>
    </div>
  </div>
</div>