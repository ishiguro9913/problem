<div class="container pt-3">
  <div class="row">
    <div class="col-lg-10 offset-lg-1">
    <h1>投稿された文字列の一覧</h1>

  <!-- 掲示板一覧 -->
  <div class="row">
    <div class="col-12">
      <div class="row">
        <% if @posts.present? %>
          <%= render @posts %>
        <% else %>
          <p><%= t('.no_result') %></p>
        <% end %>
      </div>
    </div>
  </div>

  <div class='text-center'>
    <%= link_to '投稿新規作成ページへ', new_post_path %>
  </div>
</div>
